# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Products Routes
GET     /products                   controllers.Products.products
GET     /products/:id/edit          controllers.Products.editProduct(id: Long)
GET     /products/:id               controllers.Products.viewProduct(id: Long)
GET     /products/:id/categories    controllers.Products.tagsForProduct(id: Long)
POST    /products                   controllers.Products.newProduct
POST    /products/:id/delete        controllers.Products.deleteProduct(id:Long)
POST    /products/:id/update        controllers.Products.updateProduct(id: Long)

# Tag Routes
GET     /categories                 controllers.Tags.tags
POST    /categories                 controllers.Tags.newTag
POST    /categories/:id/delete      controllers.Tags.deleteTag(id:Long)

# JSON API routes
GET     /api/products               controllers.api.Products.products
