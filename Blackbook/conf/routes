# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Products Routes
GET     /products                      controllers.ProductController.products
GET     /products/:id/edit             controllers.ProductController.editProduct(id: Long)
GET     /products/:id                  controllers.ProductController.viewProduct(id: Long)
GET     /products/:id/categories       controllers.ProductController.tagsForProduct(id: Long)
POST    /products                      controllers.ProductController.newProduct
POST    /products/:id/delete           controllers.ProductController.deleteProduct(id:Long)
POST    /products/:id/update           controllers.ProductController.updateProduct(id: Long)

# Tag Routes
GET     /categories                          controllers.TagController.tags
POST    /categories                          controllers.TagController.newTag
POST    /categories/:id/delete               controllers.TagController.deleteTag(id:Long)
